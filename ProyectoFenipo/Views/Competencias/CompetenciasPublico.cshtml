
@model IEnumerable<ProyectoFenipo.Models.Competencia>

@{
    ViewBag.Title = "Index";
}

<h2>Lista De Competencias</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Competencia")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lugar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lugar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>  
                @Html.ActionLink("Detalles Competencia", "Details", new { id = item.Id } ,  new {@type = "button",  @class="btn btn-primary" } ) 

            </td>
        </tr>
    }

</table>